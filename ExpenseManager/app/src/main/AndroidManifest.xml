<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.evelyne_ines.expensemanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExpenseActivity"
            android:label="@string/title_activity_expense"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShoppingHelpActivity"
            android:label="@string/title_activity_shopping_help"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddExpenseActivity"
            android:label="@string/title_activity_add_expense"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>